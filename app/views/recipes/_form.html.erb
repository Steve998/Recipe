<%= form_for(@recipe, :html => {:multipart => true} ) do |f| %>
<% if @recipe.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this Recipe from being saved:</h2>

  <ul>
    <% @recipe.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div>
  <br>

  <%= f.file_field :image %><br>

</div>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :ingredient %><br>
  <%= f.text_area :ingredient %>
</div>

<div class="field">
  <%= f.label :steps %><br>
  <%= f.text_area :steps %>
</div>

<div class="field">
  <%= f.label :user_id %><br>
  <%= f.select :user_id, User.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'} %>
</div>

<div class="field">
  <%= f.label :url %><br>
  <%= f.text_field :url %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
