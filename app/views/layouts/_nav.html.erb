<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag "noun_8321.svg", style: 'width: 30px; height: 30px;margin-top:-10px;' %>
      <% end %>
      <%= link_to "Recipe Saver", root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if signed_in? %>
        <p class="navbar-text">Signed in as <%= link_to @current_user.name, account_edit_path %></p>
      <% end %>
      <% if current_user %>

        <%= form_tag(recipes_path, :method => "get", id: "Search_Form", class:"navbar-form navbar-left" ) do |q| %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "Search Recipes", class: "form-control" %>
          </div>
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        <% end %>

      <% end %>


      <ul class="nav navbar-nav navbar-right">


        <li><% if !current_user %></li>
        <li><%= link_to "Sign Up", signup_path %></li>
        <li><% else %> </li>
        <li><%= link_to "My Recipes", recipes_path %></li>
        <li><% end %></li>
        <% if signed_in? %>
        <li class="dropdown">

          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            My Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to "Log in", login_path %></li>
        <% end %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
