<html>
<body>
  <h1>Recipe Wonderland</h1>
  <div class="row">

    <div class = "col-md-3">
      <div class="btn btn-default btn-block" >
        <%= link_to 'Create New Recipe', new_recipe_path %>
      </div>
    </div>

    <div class = "col-md-3">
      <div class="btn btn-default btn-block" >
        <%= link_to 'Create New Meal', new_meal_path %>
      </div>
    </div>

    <div class = "col-md-6">

    </div>
  </div>



    <div class="container-fluid">

      <% @recipe.each do |recipe| %>

      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="panel-title"><%= recipe.name %></h2>
              <h5> <%= 'Submitted By: ' %><%= recipe.user.name %></h5>
            </div>
            <div class="panel-body">

              <%= link_to (image_tag recipe.image_url(:large)) if recipe.image? %><br>
              <%= truncate(recipe.ingredient, :length => 50) %><br>
              <%= truncate(recipe.steps, :length => 50) %><br>
              <%= link_to recipe.image_url, recipe %><br>
              <br><div class="btn btn-default" >
                <%= link_to 'Leave a Comment', new_recipe_comment_path(recipe) %>
              </div>
              <div class="btn btn-default" >
                <%= link_to 'View Comments', recipe_comments_path(recipe) %>
                <%= recipe.comments.count %>
              </div>
              <br><div >
                <%= recipe.meal_id %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div class="container-fluid">

        <div class = "col-md-3">
          <div class="btn btn-default btn-block" >
            <ul><%= paginate @recipe %><ul>
            </div>
          </div>
        </div>
    </div>
</body>
</html>
