<%= form_for(@meal, :html => {:multipart => true} ) do |f| %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :user_id%><br>
  <%= f.text_field :user_id %>
</div>

<div class="field">
  <%= f.label :recipe_id%><br>
  <%= f.text_field :recipe_id %>
</div>


<div class="actions">
  <%= f.submit %>
</div>

<% end %>
